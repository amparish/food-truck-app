<body style="background-color: #D3AF8F">
 <div class="container">
    <div class="row">
      <div class="column s4"></div>
      <div class="column s4">  
      <h4>Menu</h4>  
    </div>
    <div class="row">
      {{#each menu}}
      <form id="form" class="col s12">
        <div class="row">
          <div class="input-field col s6">
            {{this.itemName}}
            <input placeholder="#itemName" id="item_name" type="text" class="validate">
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            {{this.itemDiscription}}
            <input placeholder="#itemDiscription" id="item_discription" type="text" class="validate">
          </div>
          <div class="input-field col s2>">
            {{this.itemPrice}}
            <input placeholder="#itemPrice" id="item_price" type="number" min="0" value="0" step=".01" class="validate">
          </div>
        </div>
        <div class="row"
        <div class="col s1"></div>
        <div clase="col s11"></div>
          <ul>
            <button method=post {{thie.itemName}} {{this.itemDiscription}} {{this.itemPrice}} class="btn waves-effect waves-light" type="submit" name="action">Add</button>
            <button method=push {{thie.itemName}} {{this.itemDiscription}} {{this.itemPrice}} class="btn waves-effect waves-light" type="submit" name="action">Update</button>
            <button method=delete {{thie.itemName}} {{this.itemDiscription}} {{this.itemPrice}} class="btn waves-effect waves-light" type="submit" name="action">Delete</button>
          </ul>
          {{/each}}
        </div>
        </div>
      </form>
    </div>
 </div> 
 
  

  <script type="text/javascript">
    var menu = [];
  $("#addItem").on("click",function(e){
    e.preventDefault();
    var itemName = $("#itemName").val().trim();
    var itemDescription = $("#itemDescription").val().trim();
    var itemPrice = $("#itemPrice").val().trim();
    var item = "<div class='menuItems'>";
    item += "<h4>"+itemName + "</h4>";
    item += "<br>";
    item += "<h4>" + itemDescription + "</h4>";
    item += "<br>";
    item += "<h4>" + itemPrice + "</h4>";
    item += "</div>";
    $(".menu").append(item);
    menu.push({itemName,itemDescription,itemPrice});
  })
    $("#submit").on("click", function(e){
      e.preventDefault();
    });
  </script>
  </body>